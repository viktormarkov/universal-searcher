{
	"manifest_version": 2,
	"name": "__MSG_extension_name__",
	"version": "0.5",
	"icons": {
		"16": "/assets/search-icon-16.png",
		"32": "/assets/search-icon-32.png",
        "48": "/assets/search-icon-48.png",
        "128": "/assets/search-icon-128.png"
	},
	"default_locale": "en",
	"description": "__MSG_extension_description__",
	"permissions": ["contextMenus", "tabs", "storage"],
	"background": {
		"scripts": ["js/background.js"],
		"persistent": false
	},
    "browser_action": {
      	"default_popup": "html/popup.html",
      	"default_icon": {
			"16": "/assets/search-icon-16.png",
			"32": "/assets/search-icon-32.png",
	        "48": "/assets/search-icon-48.png",
	        "128": "/assets/search-icon-128.png"
		}
    }
}